        function () {
            //console.log(compteur);
            compteur += 1;
            if(compteur % 3==0)
            {
              $.post('{{ path('update_attack_log') }}', { pseudo:"{{app.user.currentchar}}",
              player:"{{app.user.username}}" }, function(data)
              {
                if(data=='')
                {
                  $("#attack_badge").innerHTML = "";
                  console.log("PAS DATTAQUE");
                }
                else
                {
                  console.log("ATK");
                  $("#attack_badge").innerHTML = "!";
                }
              });
              compteur = 0;

            }


        }, 1000);
    };
  increment(0);
</script>
